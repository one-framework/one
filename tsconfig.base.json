{
  "compilerOptions": {
    "strict": true,
    "target": "es5",
    "module": "es2015",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "removeComments": true,
    "declaration": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "downlevelIteration": true,
    "lib": ["dom", "esnext"]
  }
}
